<%- include('../partials/header') %>

<div class="container mx-auto p-4 md:p-8">

    <h1 class="text-3xl font-bold text-gray-800 mb-6">Welcome back, <%= user.name %></h1>

    <div class="bg-white p-6 rounded-lg shadow-md mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Emergency Control Panel</h2>
        <p class="text-gray-600 mb-4">If you are in an emergency, please report it immediately.</p>
        <a href="/report" class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
            Report New Emergency
        </a>
    </div>

    <% if (activeEmergency) { %>
        <div id="active-emergency-card" class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-2xl font-bold mb-2">Ongoing Emergency Status</h2>
            <p class="mb-2"><strong>Reported:</strong> <%= new Date(activeEmergency.createdAt).toLocaleString() %></p>
            <p class="mb-4"><strong>Description:</strong> <%= activeEmergency.description %></p>
            
            <div id="status-container">
                <p class="text-lg font-semibold"><strong>Status:</strong> <span id="emergency-status" class="capitalize"><%= activeEmergency.status %></span></p>
                <% if (activeEmergency.ambulance) { %>
                    <p><strong>ETA:</strong> <span id="emergency-eta"><%= activeEmergency.ambulance.eta %> minutes</span></p>
                    <a id="track-ambulance-btn" href="/track/<%= activeEmergency._id %>" class="mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                        Track Ambulance Live
                    </a>
                <% } %>
            </div>
        </div>
    <% } %>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">My Emergency History</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="py-2 px-4 text-left">Date & Time</th>
                        <th class="py-2 px-4 text-left">Description</th>
                        <th class="py-2 px-4 text-left">Status</th>
                        <th class="py-2 px-4 text-left">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (pastEmergencies.length > 0) { %>
                        <% pastEmergencies.forEach(emergency => { %>
                            <tr class="border-b">
                                <td class="py-2 px-4"><%= new Date(emergency.createdAt).toLocaleString() %></td>
                                <td class="py-2 px-4"><%= emergency.description %></td>
                                <td class="py-2 px-4 capitalize"><%= emergency.status %></td>
                                <td class="py-2 px-4">
                                    <% if (emergency.status === 'resolved') { %>
                                        <button class="bg-gray-500 text-white font-bold py-1 px-3 rounded text-sm">Provide Feedback</button>
                                    <% } else { %>
                                        <span>-</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="py-4 px-4 text-center text-gray-500">No past emergencies found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/socketClient.js"></script>